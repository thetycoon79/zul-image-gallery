{
    "name": "zul/gallery-plugin",
    "description": "WordPress Image Gallery Plugin with extensible architecture",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Zul\\Gallery\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zul\\Gallery\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
